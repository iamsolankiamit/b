<%= simple_form_for(@offer, :defaults => { :wrapper_html => {:class => 'form-group'}, :input_html => { :class => 'form-control' } }) do |f| %>
  <%= f.input :email %>
<%= f.input :contact_phone, :as => :string %>
<%= f.input :country_code_iso, :as => :select, :label => "Country", class: "form-control", :priority => ["India"], :collection => Hash[Country.all.map{|c| [c.name,c.code]}],   :include_blank => false %>
<%= f.input :street_no , class: "form-control", :as => :string, :label => "House no."%>
<%= f.input :street ,:label => "Address Line 1", :as => :string%>
<%= f.input :address_addon , :as => :string, :label => "Address line 2"%>
<%= f.input :city , :as => :string %>
<%= f.input :object_type, 
  :as => :select, 
  :collection => {
    "Shared Room"=>"shared_room", 
    "Apartment" => "apartment", 
    "Holiday home" => "house", 
    "Private room" => "private_room", 
    "Service Apartment" => "service_apartment",
    "Chalet or cabin" => "cabin", 
    "Villa" => "villa",
    "Castle" => "castle", 
    "Farmhouse" => "farmhouse", 
    "Treehouse" => "treehouse", 
    "Boat" => "boat", 
    "Car" => "automobile"}, 
    :label => "Property Type", 
    :include_blank => false %>
  <%= f.input :nightly_rate_amount , :as => :string, :label => "Nightly Rate"%>
    <%= f.button :submit, :label => "Save & Continue", :class => 'btn-primary'%>
  <% end %>
