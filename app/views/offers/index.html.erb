<% content_for :body do %>
	<div class="container">
<div class="row">
		<div class="col-lg-3">
			<ul class="list-group">
				<%= link_to "Dashboard", offers_path, class: "list-group-item" %>
				<%= link_to "My Listings", offers_path, class: "list-group-item active" %>
				<%= link_to "Profile settings", edit_user_registration_path, class: "list-group-item" %>
			</ul>
		</div>

		<div class="col-lg-9">
      <div class="main" style="margin-top:0px;">
          <h2 class="text-center">My Listing Offers</h2>
          <hr />
			<% @offers.each do |offer| %>
        <div class="row" style="margin: 10px 0px;">
        <div class="col-lg-12 ">
<div class="col-lg-2 thumbnail">
					<% if offer.photos.exists?  %>
					<%if !offer.photos.first.nil? %>
					<%= image_tag offer.photos.first.image.url(:medium), class: "img-polaroid", height:"150" %> <% end %>
					<% end %>
				</div>
        <div class="col-lg-7">
				<h2 class="text-center">
					<% if offer.translations.exists? %>
					<% if !offer.translations.first.title.nil? %>
					  <%= offer.translations.first.title.titlecase %>
					<%else%>
					Your New Offer(<%= offer.id %>)
					  <% end %>
        <% end %></h2>
      </div>
								<div class="col-lg-3 text-right">
					<ul class="list-unstyled" style="padding-top:20px;">
						<li>
					<%= link_to "Modify listing", edit_offer_translations_path(offer)  %></li>
					<li><%= link_to  "View listing", offer_path(offer) %></li>
					<li><%= link_to  "Delete listing", offer_path(offer), method: "delete" %></li>
					</ul>
				</div>
			</div>
		</div>
      <hr class="col-lg-12" />
			<% end %>
			<% if @offers.count <= 0 %>
				<div style="text-align:center;">
					<hr>
					<h3>You currently don't have any Listings</h3>
					<%= link_to "List your place" , new_offer_path, class: "btn btn-primary btn-large" %>
					<hr>
				</div>
			<% end %>
			</div>
        </div>
	</div>
          </div>
</div>
<% end %>

