<% content_for :body do %>
<%- model_class = Offer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:visiblity) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:contact_phone) %></th>
      <th><%= model_class.human_attribute_name(:contact_phone_backup) %></th>
      <th><%= model_class.human_attribute_name(:object_type) %></th>
      <th><%= model_class.human_attribute_name(:size) %></th>
      <th><%= model_class.human_attribute_name(:size_type) %></th>
      <th><%= model_class.human_attribute_name(:bed_type) %></th>
      <th><%= model_class.human_attribute_name(:allow_marketing) %></th>
      <th><%= model_class.human_attribute_name(:street) %></th>
      <th><%= model_class.human_attribute_name(:street_no) %></th>
      <th><%= model_class.human_attribute_name(:address_addon) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:zip) %></th>
      <th><%= model_class.human_attribute_name(:country_code_iso) %></th>
      <th><%= model_class.human_attribute_name(:currency) %></th>
      <th><%= model_class.human_attribute_name(:nightly_rate_amount) %></th>
      <th><%= model_class.human_attribute_name(:weekly_rate_amount) %></th>
      <th><%= model_class.human_attribute_name(:monthly_rate_amount) %></th>
      <th><%= model_class.human_attribute_name(:extra_guest_charge_amount) %></th>
      <th><%= model_class.human_attribute_name(:service_charge_amount) %></th>
      <th><%= model_class.human_attribute_name(:cancelation_policy) %></th>
      <th><%= model_class.human_attribute_name(:min_nights) %></th>
      <th><%= model_class.human_attribute_name(:max_nights) %></th>
      <th><%= model_class.human_attribute_name(:checkin_after) %></th>
      <th><%= model_class.human_attribute_name(:checkout_before) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= link_to offer.id, offer_path(offer) %></td>
        <td><%= offer.visiblity %></td>
        <td><%= offer.email %></td>
        <td><%= offer.contact_phone %></td>
        <td><%= offer.contact_phone_backup %></td>
        <td><%= offer.object_type %></td>
        <td><%= offer.size %></td>
        <td><%= offer.size_type %></td>
        <td><%= offer.bed_type %></td>
        <td><%= offer.allow_marketing %></td>
        <td><%= offer.street %></td>
        <td><%= offer.street_no %></td>
        <td><%= offer.address_addon %></td>
        <td><%= offer.city %></td>
        <td><%= offer.zip %></td>
        <td><%= offer.country_code_iso %></td>
        <td><%= offer.currency %></td>
        <td><%= offer.nightly_rate_amount %></td>
        <td><%= offer.weekly_rate_amount %></td>
        <td><%= offer.monthly_rate_amount %></td>
        <td><%= offer.extra_guest_charge_amount %></td>
        <td><%= offer.service_charge_amount %></td>
        <td><%= offer.cancelation_policy %></td>
        <td><%= offer.min_nights %></td>
        <td><%= offer.max_nights %></td>
        <td><%= offer.checkin_after %></td>
        <td><%= offer.checkout_before %></td>
        <td><%= offer.user_id %></td>
        <td><%=l offer.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_offer_path(offer), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      offer_path(offer),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_offer_path,
            :class => 'btn btn-primary' %>
<% end %>