<% content_for :body do %>
  <div class="container">
  <div class="row">
    <div class="col-sm-5 hidden-xs" style="">
      <div class="panel panel-default"><div id="map" style="height:400px;"></div></div>
    </div>
    <div class="col-sm-7">
      <div class="">
        <div class="row">
          <% @offers.each do |offer|  %>
            <div class="col-sm-6">
            <%= link_to offer_path(offer), class: "thumbnail" do  %>
              <div class="price-box">
              <div class="price">
                <sup><%= offer.nightly_rate_amount  %><i class="icon-inr"></i></sup>
                <sup>INR</sup>
              </div>
              <div class="price-info">Per night</div>
            </div>
            <%= image_tag offer.photos.first.image.url(:searchimg), class: "img-responsive" %>
            <div class="caption">
              <div class="title"><%= offer.translations.first.title.humanize  %> </div>
              <div class="location">Property type: <%= offer.object_type.titlecase %></div>
              <div class="location"><%= offer.city.titlecase %></div>
            </div>
          <% end %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
<% content_for :js do %>
  <script>
$(function() {
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){

    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
});
</script>
<% end %>
