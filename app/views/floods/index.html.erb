<% content_for :title do  %>
Assist Flood Victims By Providing Free Shelter | Room N House
<% end %>
<% content_for :description do  %>
"Help assist flood victims by offering up your room, apartment, villa, or house as a free shelter. Contact us today for more information."
<% end %>
<% content_for :body do %>

<div class="container">
  <h2>Help Flood victims by providing them <%= link_to "shelter for free" , new_flood_path %></h2>
  <div class="" style="margin: 20px auto;min-height:700px">
    <table class="table table-striped table-bordered">
      <thead>
        <caption>List of all available places to stay</caption>
        <tr>
        <td>Name</td>
        <td>City</td>
        <td>Address</td>
        <td>Accommodation</td>
        <td>Phone</td>
      </tr>
      </thead>
      <tbody>

        <% @floods.each do |flood| %>
  <tr>
    <td><%= flood.firstname %> <%= flood.lastname %></td>
    <td><%= flood.city %></td>
    <td><%= flood.address %></td>
    <td><%= flood.accommodates %></td>
    <td><%= flood.phone %></td> </tr>
<% end %>
      </tbody>
    </table>

    <p>
      The cause is supported by Salaam Zindagi(NGO).
      You can connect with them on:
      <ul>
        <li>09720472842</li>
        <li>09720657598</li>
        <li>09897337800</li>
        <li>07895752120</li>
      </ul>
    </p>
  </div>

</div>
 <% end %>
