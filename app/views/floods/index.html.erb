<% content_for :body do %>

<div class="container">
  <div class="" style="margin: 20px auto;min-height:700px">
    <table class="table table-striped table-bordered">
      <thead>
        <caption>List of all available places to stay</caption>
        <tr>
        <td>Name</td>
        <td>City</td>
        <td>Address</td>
        <td>Accommodation</td>
        <td>Phone</td>
      </tr>
      </thead>
      <tbody>

        <% @floods.each do |flood| %>
  <tr>
    <td><%= flood.firstname %> <%= flood.lastname %></td>
    <td><%= flood.city %></td>
    <td><%= flood.address %></td>
    <td><%= flood.accommodates %></td>
    <td><%= flood.phone %></td> </tr>
<% end %>
      </tbody>
    </table>
  </div>
</div>
 <% end %>