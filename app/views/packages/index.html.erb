<% content_for :body do %>
<% @packages.each do |offer| %>
          <div class="col-lg-3 col-sm-4 col-xs-6">
          <%= link_to offer, class: "thumbnail" do %>
            <div>
            <div class="price-box">
              <div class="price">
                <sup><i class="icon-inr"></i></sup>
                <%= offer.price  %>
                <sup>INR</sup>
              </div>
              <div class="price-info">per package</div>
            </div>
          </div>
          <%= image_tag offer.photos.first.image.url(:medium), class: "offer-image img-responsive" %>
          <div class="caption">
            <div class="title">Only <%= offer.unit_count %> packages left.</div>
            <div class="location">For 3 nights and 4 days at <%= offer.package_rate  %> per person</div>
          </div>
        <% end %>
        </div>
<% end %>
<% end %>
