<% content_for :body do %>
  <%= @package.address_line_2 %>
  <%= @package.bathroom_count %>
  <%= @package.room_count %>
  <%= @package.pax_count %>
  <%= @package.price %>
  <%= @package.facilities %>
  <%= @package.unit_count %>
  <b>Extra person allowed count:</b>
  <%= @package.extra_person_allowed_count %>
  <b>Extra person charge:</b>
  <%= @package.extra_person_charge %>
  <b>Checkin:</b>
  <%= @package.checkin %>
  <b>Checkout:</b>
  <%= @package.checkout %>
  <b>Max guest:</b>
  <%= @package.max_guest %>
  <b>Package rate:</b>
  <%= @package.package_rate %>

<%= simple_form_for(:package_booking, url: '/package_bookings/new', method: 'get') do |f|  %>
  <%= f.input :guest_count %>
  <%= f.input :unit_count  %>
  <%= f.hidden_field :package_id, value: @package.id  %>
  <%= f.button :submit, value: "Book"  %>
<% end  %>
<% end %>
