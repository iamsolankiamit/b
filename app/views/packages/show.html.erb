<% content_for :body do %>
  <div class="container">
  <div class="row">
    <div class="col-sm-8">
      <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Wrapper for slides -->
        <div class="carousel-inner">
          <div class="item active">
            <%= image_tag @offer.photos.first.image.url(:slider), class: "img-responsive", :style => "width:100%"  %>
            <div class="carousel-caption">
            </div>
          </div>
          <% @offer.photos[1..-1].each do |photo| %>
            <div class="item">
            <%= image_tag photo.image.url(:slider), class: "img-responsive", :style => "width:100%"  %>
            <div class="carousel-caption">
            </div>
          </div>
        <% end %>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
          <span class="icon-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
          <span class="icon-chevron-right"></span>
        </a>
      </div>
<div class="row">
        <h3><%= @package.address_line_2 %></h3>
        <div class="property-overview">
          <span><strong>No. of rooms </strong><%= @package.room_count %>
</span>
          <span class="pull-right text-right"><strong>No. of bathrooms </strong><%= @package.bathroom_count %></span>
        </div>
        <div class="headings-offer">
          Facilities:
        </div>
        <article class="text-justify">
        <%= @package.facilities %></article>
      </div>

      </div>
      <div class="col-sm-4">
        <div class="row">
          <div class="panel panel-default">
          <div class="panel-body">
            <span>Price: <%= @package.price %></span>
          <%= simple_form_for(:package_booking, url: '/package_bookings/new', class: "form-horizontal", method: 'get') do |f|  %>
            <div class="form-group">
            <label for="" class="col-sm-4">No. of guest</label>
            <div class="col-sm-8">
              <%= f.input_field :guest_count, as: :select, collection: [@package.pax_count..@package.max_guest], class: "form-control", value: @package.max_guest%>
            </div>
          </div>
          <div class="form-group">
            <label for="" class="col-sm-4">No. of packages</label>
            <div class="col-sm-8">
              <%= f.input_field :unit_count , as: :select,  class: "form-control", value: "1" %>
            </div>
          </div>
          <%= f.hidden_field :package_id, value: @package.id  %>
          <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
              <%= f.button :submit, value: "Book", class: "btn btn-primary"  %>
            </div>
          </div>
        <% end  %> 

          </div>
          </div>
                  </div>
        <div class="row">
          <div class="panel panel-default">
            <div class="panel-heading">
              <div class="panel-title">
                Pricing Details
              </div>
            </div>
            <div class="panel-body">
              <dl class="dl-horizontal">
                <dt>
           <b>Max Extra Guest:</b>
                </dt>
                <dd>
          <%= @package.extra_person_allowed_count %>
                </dd>
                <dt>
          <b>Extra person charge:</b>
                </dt>
                <dd>
          <%= @package.extra_person_charge %>
                </dd>
                <dt>
          <b>Checkin:</b>
                </dt>
                <dd>
          <%= @package.checkin %>
                </dd>
                <dt>
          <b>Checkout:</b>
                </dt>
                <dd>
          <%= @package.checkout %>
                </dd>
                <dt>
          <b>Max guest:</b>
                </dt>
                <dd>
          <%= @package.max_guest %>
                </dd>
                <dt>
                <b>Package rate:</b>
                </dt>
                <dd>
          <%= @package.package_rate %>
                </dd>
                <dt>
No of packages available
                </dt>
                <dd>
                <%= @package.unit_count  %> 
                </dd>
                </dl>
                <dt>Pax:</dt>
                <dd><%= @package.pax_count %></dd>
            </div>
          </div>
                  </div>
          </div>
  </div>
  </div>
<% end %>
