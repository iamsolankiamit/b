<% content_for :header do %>
<div class="search-container">
  <div class="title" style="height:150px">Travelers Accomodation, simplified.</div>
  <div class="flood-callout" style="text-align:center;color:#ecf0f1">
<div>
    <h2 style="font-size:2.5em;
font-weight: 700;
text-shadow: 0px 0px 10px #2c3e50;">Help the Flood Victims</h2>
    <%= link_to "Provide Shelter To Flood Victims <i class='icon-heart icon-white'></i> ".html_safe, new_offer_path,  class: "btn btn-large btn-danger" %>
    <%= link_to "Are You A Flood Victim?",floods_path,  class: "btn btn-large" %>
    </div>
  </div>
  <div class="search">
    <%= form_tag "/search", :method => 'get', id: 'search_form' do %>
    <%= text_field_tag :location, nil, placeholder: "Where do you want to go?", style: "width: 250px;margin-left: 5px;" %>
    <%= text_field_tag :time, nil, placeholder: "Check in" %>
    <%= text_field_tag :time, nil, placeholder: "Check out" %>
    <%= text_field_tag :guests, nil, placeholder: "Guests" %>
    <%= submit_tag :search, class: "btn btn-danger btn-large" %>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="" style="margin: 20px auto;min-height:700px">
    <table class="table table-striped table-bordered">
      <thead>
        <caption>List of all available places to stay</caption>
        <tr>
        <td>#</td>
        <td>Name</td>
        <td>City</td>
        <td>Address</td>
        <td>Accommodation</td>
        <td>Phone</td>
      </tr>
      </thead>
      <tbody>
        <% @offers.each do |offer| %>
        <% host = User.find(offer.user_id) %>
        <tr>
          <td><%= offer.id %></td>
          <td><%= host.firstname.humanize %> <%= host.lastname.humanize %></td>
          <td><%= offer.city.humanize %></td>
          <td><%= offer.street_no %> <%= offer.street %> <%= offer.address_addon %>. Zip: <%= offer.zip %></td>
          <td><%= offer.max_guest_count %></td>
          <td><%= offer.contact_phone %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<% end %>