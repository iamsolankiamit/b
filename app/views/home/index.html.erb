<% content_for :header do %>
<div class="header-main" style="background: url(<%= image_path("main-header-background.jpg") %>)">
	<div class="container">
		<div class="row">
			<header class="brandbar">
				<div class="span4 logo">Roomnhouse</div>
				<div class="span4">
					<div class="claim">Where Travelers Stay</div>
				</div>
			</header>
		</div>
	</div>
</div>
<div class="searchbar">
	<div class="container">
		<div class="row">
			<%= form_tag search_index_path , :method => 'get' do %>
			<%= text_field_tag :search, params[:search], :id => 'search_field' %>
			<%= submit_tag "Search", :name => nil %> 
			<%= link_to_function "Clear", "$('search_field').clear()" %>
			<% end %> 
			<div class="" style="text-align:center">We currently only list in Mumbai</div>
		</div>
	</div>
</div>
<% end %>