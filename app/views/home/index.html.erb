<% content_for :header do %>
  <div class="home-search-bar-holder">
  <div class="container">
    <div class="row ">
      <div class="col-sm-6 hidden-sm hidden-xs">
        <h1 class="title">Travel Easy. Stay Easier</h1>
      </div>
      <div class="col-sm-6 col-lg-4 col-sm-offset-6 col-md-6 col-md-offset-0 col-lg-offset-1 home-search-bar">
        <h2 class="home-sub-title"><i class="icon-search"></i> Search for private properties in India.</h2>
        <%= form_tag "/search", :method => 'get', class: "form-horizontal", id: 'search_form' do %>
          <div class="form-group">
          <div class="col-sm-12"><label for="geolocation">Destination</label></div>
          <div class="col-sm-12">
            <%= search_field_tag :destination, params[:search],autofocus: true, placeholder: "Where do you want to go?", autocomplete: "off", required: "required", id: "geolocation", class: "required form-control" %></div>
        </div>
        <div class="form-group">
          <div class="col-xs-6">
            <div class="input-group">
              <%= text_field_tag :checkin, nil,class: "form-control", placeholder: "Check in"%>
              <span class="input-group-addon"><i class="icon icon-calendar"></i></span>
            </div>
          </div>

          <div class="col-xs-6">
            <div class="input-group">
              <%= text_field_tag :checkout, nil,class: "form-control", placeholder: "Check out"%>
              <span class="input-group-addon"><i class="icon icon-calendar"></i></span>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="col-xs-6">
            <div class="input-group">
              <%= select_tag :guests, options_for_select([["1 Guest",1], ["2 Guests",2], ["3 Guests",3], ["4 Guests",4], ["5 Guests",5],["6 Guests",6], ["7 Guests",7], ["8 Guests",8], ["9 Guests",9],["10 Guests",10], ["11 Guests",11], ["12 Guests",12],["13 Guests",13],["14 Guests",14],["15 Guests",15],["16+ Guests",16]]), class: "form-control" %>
              <span class="input-group-addon"><i class="icon icon-group"></i></span>
            </div>
          </div>
          <div class="col-xs-6">
            <div class="input-group">
              <%= select_tag :bedrooms, options_for_select([["1 Bedroom",1], ["2 Bedrooms",2], ["3 Bedrooms",3], ["4 Bedrooms",4], ["5 Bedrooms",5],["6 Bedrooms",6]]), class: "form-control" %>
              <span class="input-group-addon"><i class="icon icon-room"></i></span>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-12">
            <input type="submit" class="form-control btn btn-primary" value="Search" />
          </div>
        </div>

      <% end %>
      </div><!-- end of class="row" -->
    </div><!-- end of class="row" -->
  </div><!-- end of class="row" -->
</div><!-- end of class="container" -->
<% end %>
<% content_for :body do %>
  <div class="container">
  <div class="row">
    <div class="col-lg-3 col-md-4 hidden-sm hidden-xs">
      <div class="list-group">
        <h3 class="list-group-item">Popular Destinations</h3>
        <a class="list-group-item" href="http://roomnhouse.com/search?destination=mumbai">Mumbai</a>
        <a class="list-group-item" href="http://roomnhouse.com/search?destination=delhi">Delhi</a>
        <a class="list-group-item" href="http://roomnhouse.com/search?destination=goa">Goa</a>
        <a class="list-group-item" href="http://roomnhouse.com/search?destination=pune">Pune</a>
        <a class="list-group-item" href="http://roomnhouse.com/search?destination=banglore">Banglore</a>
        <a class="list-group-item" href="http://roomnhouse.com/search?destination=lonavala">Lonavala</a>
      </div>
    </div>

    <div class="col-lg-9 col-md-8">
      <h3>Popular Apartments</h3>
      <div class="row">
        <% @offers.each do |offer| %>
          <div class="col-lg-3 col-sm-4 col-xs-6">
          <%= link_to offer, class: "thumbnail" do %>
            <div>
            <div class="price-box">
              <div class="price">
                <sup><i class="icon-inr"></i></sup>
                <%= offer.nightly_rate_amount  %>
                <sup>INR</sup>
              </div>
              <div class="price-info">per night</div>
            </div>
          </div>
          <%= image_tag offer.photos.first.image.url(:medium), class: "offer-image img-responsive" %>
          <div class="caption">
            <div class="title"><%= offer.translations.first.title.titlecase %></div>
            <div class="location"><%= offer.city.titlecase %></div>
          </div>
        <% end %>
        </div>
      <% end %>
      </div>
      <% if session[:recently_viewed_offers] %>
        <h3>My Viewed Rooms</h3>
      <div class="row">
        <% @recently_viewed_offers.each do |offer| %>
          <div class="col-lg-3 col-sm-4 col-xs-6">
          <%= link_to offer, class: "thumbnail" do %>
            <div>
            <div class="price-box">
              <div class="price">
                <sup><i class="icon-inr"></i></sup>
                <%= offer.nightly_rate_amount  %>
                <sup>INR</sup>
              </div>
              <div class="price-info">per night</div>
            </div>
          </div>
          <%= image_tag offer.photos.first.image.url(:medium), class: "offer-image img-responsive" %>
          <div class="caption">
            <div class="title"><%= offer.translations.first.title.titlecase %></div>
            <div class="location"><%= offer.city.titlecase %></div>
          </div>
        <% end %>
        </div>
      <% end %>
      </div>
    <% end %>
    </div>
  </div>
</div>
<% end %>
<% content_for :js do %>
  <script>
$(function() {
  $( "#checkin" ).datepicker({
    minDate:"0",
    defaultDate: "+1w",
    changeMonth: true,
    numberOfMonths: 1,
    onClose: function( selectedDate ) {
      $( "#checkout" ).datepicker( "option","minDate",selectedDate );
    }
  });
  $( "#checkout" ).datepicker({
    minDate:"0",
    defaultDate: "+1w",
    changeMonth: true,
    numberOfMonths: 1,
    onClose: function( selectedDate ) {
      $( "#checkin" ).datepicker( "option", "maxDate", selectedDate );
    }
  });
});
$("#geolocation").geocomplete();
</script>
<% end %>
