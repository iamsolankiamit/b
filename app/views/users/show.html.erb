<% content_for :body do %>
  <div class="row">
    <div class="container">
      <div class="col-lg-3 " style= "padding-top:20px;">
        <%= image_tag @user.avatar.url(:medium), class: "img-thumbnail"  %>
        <h3 class="text-center"><%= @user.firstname.titlecase  %></h3>
      </div>
      <div class="col-lg-9 main">
        <h2>Hey, I'm <%= @user.firstname  %></h2>
        <p><%= @user.about  %></p>
        <h2>My Offers</h2>
        <% @offers.each do |offer|  %>
          <div class="row">
            <div class="container">
              <div class="col-lg-3">
                <%= image_tag offer.photos.first.image.url(:medium), class: "img-thumbnail"  %>
              </div>
              <div class="col-lg-9">
                <h2><%= offer.translations.first.title.titlecase  %></h2>
                <%= offer.translations.first.description.truncate(250)  %>
              </div>
            </div>
          </div>
        <% end  %>
      </div>
    </div>
  </div>
<% end %>
