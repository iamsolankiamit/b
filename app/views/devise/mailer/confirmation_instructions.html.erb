    <div class="confirm_buttonlink" style="text-align:center; width:100%; margin:15px 0px;">
      <a style="text-decoration:none; font-family: 'Open Sans', Arial,Helvetica; " href="#">
        <div style="border-radius:5px; width: 200px; margin:0 auto; height: 45px; line-height: 45px; font-size: 18px; color: white; background-color: #60a3d9;">
          <%= link_to 'Confirm my account', confirmation_url(@resource, :confirmation_token => @token) %>
