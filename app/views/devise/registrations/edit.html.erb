<% content_for :body do %>
  <div class="container">
  <div class="row">
    <div class="col-lg-3">
      <ul class="list-group">
        <%= link_to "Dashboard", offers_path, class: "list-group-item" %>
        <%= link_to "My Listings", offers_path, class: "list-group-item active" %>
        <%= link_to "My trips", trips_path, class: "list-group-item" %>
        <%= link_to "Profile settings", edit_user_registration_path, class: "list-group-item" %>
      </ul>
    </div>

    <div class="col-lg-9">
      <div class="main" style="margin-top:0px;">
        <h2 class="text-center">Profile Settings</h2>
        <hr class=" offer-hr">
        <div class="row">
 
            <%= simple_form_for(resource, :defaults => { :wrapper_html => {:class => 'form-group'}, :input_html => { :class => 'form-control' } },:as => resource_name, :url => registration_path(resource_name), :html => { :method => :put ,class: "form-horizontal"}) do |f| %>
              <%= f.error_notification %>

         <div class="col-lg-5 col-lg-offset-1">
            <div class="form-inputs">
              <%= f.input :email, :required => true, :autofocus => true %>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>
            <%= f.input :firstname, :required => true  %> 
            <%= f.input :lastname, :required  => true  %>
            <%= f.input :phone, :as  => :string, :required  => true  %>
            <%= f.input :work_phone , :as  => :string %>
            <%= f.input :location  %>
            <%= f.input :about , :html => {:rows => '5'} %>
              <%= f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false %>
              <%= f.input :password_confirmation, :required => false %>
              <%= f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true %>

           

              <%= f.input :age,:required => true %>

              
              <div class="control-group">
              <%= f.label "Gender::" %>
              <div class="controls">
                <%= f.select(:gender, options_for_select([["Male","Male"],["Female","Female"]]))%>
              </div>
            </div>
              


              <div class="control-group">
               <%= f.label "income::" %>
                <div class="controls">
                <%= f.select(:income, options_for_select([["<200000","<200000"],["<500000","<500000"],["<1000000","<1000000"],[">1000000","1000000"]]))%>
              </div>
            </div>


                <div class="control-group">
                 <%= f.label "Education::" %>
                  <div class="controls">
                <%= f.select(:education, options_for_select([["educated","educated"],["NOT-educated","NOT-educated"]]))%>

                </div>
              </div>

                <%= f.input :occupation, :required => false %>

              <%= f.input :location, :required => true %>

                <div class="control-group">
                 <%= f.label "family Status::" %>
                 <div class="controls">
                <%= f.select(:family_status, options_for_select([["Married","married"],["NOT-Married","NOT-Married"]]))%>
</br>
              </div>
            </div>

              
            </div>

         </div>



         <div class="col-lg-3 col-lg-offset-2">
             <%= image_tag resource.avatar.url(:medium) , :class  => "img-thumbnail" %>
         <%= f.input :avatar  %>
         </div>

         <hr>
         <div class="row">
           <div class="col-lg-6 col-lg-offset-1">
             <div class="form-actions">
              <%= f.button :submit, "Update" %>
            </div>
          <% end %>
            <%= link_to "Back", :back %>
        </div>
        </div>
        </div>
      </div>
    </div>
    </div>
    </div>
  <% end %>
