<% content_for :body do %>
<div class="container">
  <div class="row">
  <div class="col-lg-4 col-lg-offset-4 main">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <legend>Sign up</legend>
        <div class="form-group"><%= f.label :firstname %>
        <%= f.text_field :firstname, class: "form-control" %></div>
        <div class="form-group"><%= f.label :lastname %>
        <%= f.text_field :lastname, class: "form-control" %></div>
        <div class="form-group"><%= f.label :phone %>
        <%= f.phone_field :phone, class: "form-control" %></div>
        <div class="form-group"><%= f.label :email %>
        <%= f.email_field :email , class: "form-control"%></div>
        <div class="form-group"><%= f.label :password %>
        <%= f.password_field :password , class: "form-control"%></div>
      Minimum 8 Characters
        <div class="form-group"><%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation , class: "form-control"%></div>
        <div class="form-group"><%= f.submit "Sign up", class: "btn btn-default btn-medium" %></div>
      <% end %>

      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
<% end %>
