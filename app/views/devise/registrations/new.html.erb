<% content_for :body do %>

  <div class="row">
  <div class="container">
    <div class="col-lg-4 col-lg-offset-4 main">
 
<h2>Sign up</h2>
          <%= link_to "Sign up with Facebook", user_omniauth_authorize_path(:facebook),class: "btn btn-primary" %>
<%= simple_form_for(resource, :defaults => { :wrapper_html => {:class => 'form-group'} },:as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :firstname, :required => true, :autofocus => true , :input_html => { :class => 'form-control' }%>
    <%= f.input :lastname, :required => true, :autofocus => true , :input_html => { :class => 'form-control' }%>
    <%= f.input :phone,:as => :string, :required => true, :autofocus => true , :input_html => { :class => 'form-control' }%>
    <%= f.input :email, :required => true, :autofocus => true , :input_html => { :class => 'form-control' }%>
    <%= f.input :password, :required => true , :input_html => { :class => 'form-control' }%>
    <%= f.input :password_confirmation, :required => true , :input_html => { :class => 'form-control' }%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
    </div>
  </div>
</div>
<% end %>
