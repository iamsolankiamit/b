<% content_for :body do  %>
  <div class="row">
  <div class="container">
    <div class="col-lg-4 col-lg-offset-4 main">
      <h2>Sign in</h2>

      <%= simple_form_for(resource,  :defaults => { :wrapper_html => {:class => 'form-group'} },:as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div class="form-inputs">
        <%= f.input :email, :required => false, :autofocus => true , :input_html => { :class => 'form-control' }%>
        <%= f.input :password, :required => false , :input_html => { :class => 'form-control' }%>
        <%= f.input :remember_me, :as => :boolean , class: "checkbox" if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign in" %>
      </div>
    <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
<% end %>
