<% content_for :body do  %>
  <div id="content">
  <div class="content_inner">
    <div class="login">
      <div class="holder">
        <div class="login_form_holder white_bg align-left">
          <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
          <div id="alert">Please login with your Username and Password.</div>
          <%= simple_form_for(resource,:as => resource_name, html: { class: "form-horizontal"}, :url => session_path(resource_name)) do |f| %>
            <p> <%= f.input :email, :required => false,:input_html => {:size =>0},:label => false, :autofocus => true ,  placeholder: "Email"%></p>
        <p><%= f.input :password, :required => false ,:input_html => {:size =>0},:label => false, placeholder: "password"%></p>
        <p><%= f.input :remember_me, :as => :boolean ,:label => false, class: "checkbox" if devise_mapping.rememberable? %></p>
        <%= f.button :submit, "login" %>
    <% end %>
          <%= render "devise/shared/links" %>
        </div><!--End of class="login_form_holder" -->              
      </div>
    </div>
  </div><!-- end of class="content_inner" -->    
</div><!-- end of id="content" -->
    </div>
  </div>
</div>
<% end %>
