<% content_for :body do %>
  <div class="row">
  <div class="container">
    <div class="col-lg-4 col-lg-offset-4 main">
 
<h2>Change your password</h2>

<%= simple_form_for(resource,  :defaults => { :wrapper_html => {:class => 'form-group'} },:as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, :as => :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, :label => "New password", :required => true, :autofocus => true , :input_html => { :class => 'form-control' }%>
    <%= f.input :password_confirmation, :label => "Confirm your new password", :required => true , :input_html => { :class => 'form-control' }%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Change my password" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
    </div>
  </div>
</div>
<% end %>
