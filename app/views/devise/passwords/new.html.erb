<% content_for :body do %>
  <div class="row">
  <div class="container">
    <div class="col-lg-6 col-lg-offset-3 main">
 
<h2>Forgot your password?</h2>

<%= simple_form_for(resource,  :defaults => { :wrapper_html => {:class => 'form-group'} },:as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, :required => true, :autofocus => true , :input_html => { :class => 'form-control' }%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send me reset password instructions" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
    </div>
  </div>
</div>
<% end %>
