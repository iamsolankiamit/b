<% content_for :body do %>
  <div class="container">
  <div class="row">
    <div class="col-lg-3">
      <ul class="list-group">
        <%= link_to "Dashboard", offers_path, class: "list-group-item" %>
        <%= link_to "Inbox", inquiries_path, class: "list-group-item active" %>
        <%= link_to "My Listings", offers_path, class: "list-group-item" %>
        <%= link_to "Profile settings", edit_user_registration_path, class: "list-group-item" %>
      </ul>
    </div>

    <div class="col-lg-9">
      <div class="main" style="margin-top:0px;">
        <h2 class="text-center">Inbox</h2>
        <hr class=" offer-hr">
        <% @inquiries.each do |inquiry| %>
          <div class="row">
          <% if current_user == inquiry.guest %>
            <div class="col-sm-2">
            <%= image_tag inquiry.host.avatar.url(:medium_center), class: "img-responsive"  %>
          </div>
          <div class="col-sm-2">
            <div class="row" style="padding-top:30px;">
              <%= inquiry.host.firstname  %>
            </div>
            <div class="row" style="padding-top:10px;">
              <%= distance_of_time_in_words_to_now inquiry.messages.last.created_at  %> ago.
            </div>
          </div>
        <% elsif current_user == inquiry.host %>
            <div class="col-sm-2">
            <%= image_tag inquiry.guest.avatar.url(:medium_center), class: "img-responsive"  %>
          </div>
        <% end %>
          <div style="padding-top:30px;">
            <div>
              <%= link_to inquiry.messages.first.content.truncate(100).titlecase, inquiry_path(inquiry)  %>
            </div>
            <div>
              <%= inquiry.check_in  %> - <%= inquiry.check_out  %>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>
