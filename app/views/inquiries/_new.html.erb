<%= simple_form_for(@inquiry, :defaults => { :wrapper_html => {:class => 'form-group'}, :input_html => { :class => 'form-control' } }, remote: true) do |f| %>
  <%= f.input :check_in, as: :string, label: "Check in", class: "form-control" %>
<%= f.input :check_out, as: :string, label: "Check out", class: "form-control" %>
<%= f.input :guest_count, collection: 1..15 , prompt: "Select no. of guests", label: "Guests", class: "form-control" %>
<%= f.input :offer_id,as: :hidden %>
<%= f.input :receiver_id,as: :hidden %>
<%= f.simple_fields_for :messages do |t| %>
  <%= t.input :content, as: :text %>
  <% end %>
<%= f.button :submit, :label => "Send Message", :class => 'btn-primary'%>
  <% end %>

