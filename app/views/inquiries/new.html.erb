<% content_for :body do %>
  <%= simple_form_for(@inquiry, :defaults => { :wrapper_html => {:class => 'form-group'}, :input_html => { :class => 'form-control' } }) do |f| %>
  <%= f.input :check_in, as: :string, label: "Check in", class: "form-control" %>
<%= f.input :check_out, as: :string, label: "Check out", class: "form-control" %>
<%= f.input :guest, as: :select, label: "guests", class: "form-control" %>
<%= f.hidden :offer_id %>
<%= f.hidden :receiver_id %>
<%= f.button :submit, :label => "Send Message", :class => 'btn-primary'%>
<% end %>
<% end %>
