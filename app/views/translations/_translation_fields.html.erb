<div id="new-translation-fields" class="modal fade" data-backdrop="static">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
  </div>
  <div class="modal-body">
    <fieldset>
      <div class="control-group">
        <%= f.label(:locale, :class => "control-label") %>
        <div class="controls">
          <%= f.text_field(:locale, :class => "input-xlarge field") %>
        </div>
      </div>
 
      <div class="control-group">
        <%= f.label(:title, :class => "control-label") %>
        <div class="controls">
          <%= f.text_field(:title, :class => "input-xlarge field") %>
        </div>
      </div>
 
      <div class="control-group">
        <%= f.label(:description, :class => "control-label") %>
        <div class="controls">
          <%= f.text_field(:description, :class => "input-xlarge field") %>
        </div>
      </div>
 
      <div class="control-group">
        <%= f.label(:rules, :class => "control-label") %>
        <div class="controls">
          <%= f.text_field(:rules, :class => "input-xlarge field") %>
        </div>
      </div>
 
      <%= f.hidden_field(:description_translated_by_google, :class => "field") %>
      <%= f.hidden_field(:title_translated_by_google, :class => "field") %>
      <%= f.hidden_field(:_destroy, :class => "field") %>
    </fieldset>
  </div>
  <div class="modal-footer">
    <button id="addButton" type="button" class="btn btn-primary" data-dismiss="modal" aria-hidden="true" title="Add this translation to the list of translations that are assigned to this offer.">Add</button>
    <button id="cancelButton" type="button" class="btn btn-inverse" data-dismiss="modal" aria-hidden="true" title="Close this screen without adding the translation to the list.">Cancel</button>
  </div>
</div>
 
<script type="text/javascript">
  translationFieldsUI.init();
</script>