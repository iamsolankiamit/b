
<% modal ||= false %>
<% remote = modal ? true : false %>
<%= simple_form_for(:shouts,url: '/shouts',method: 'POST', remote: true , html: {role: :form, 'data-model' => 'myModal'}) do |f| %>


  <%# Added Bootstrap classes, and help-block container for error messages %>
  <div class="form-group">
    <%= f.label :destination, class: 'control-label' %><br>
    <%= f.text_field :destination, class: 'form-control' %>
    <span class="help-block"></span>
  </div>

  <%# Added Bootstrap classes, and help-block container for error messages %>
  <div class="form-group">
    <%= f.label :Budget, class: 'control-label' %><br>
    <%= f.text_field :per_night,:Placeholder => "price", class: 'form-control' %>
    <span class="help-block"></span>
  </div>

  <div class="form-group">
    <%= f.label :Email, class: 'control-label' %><br>
    <%= f.text_field :email,:Placeholder => "enter your email", class: 'form-control' %>
    <span class="help-block"></span>
  </div>

  <div class="form-group">
    <%= f.label :Contact_Phone, class: 'control-label' %><br>
    <%= f.text_field :contact_phone,:Placeholder => "price", class: 'form-control' %>
    <span class="help-block"></span>
  </div>


  <div class="form-group">
     <input type="Submit" class="btn btn-primary" value="Shout Out Loud">
  </div>

<% end %>