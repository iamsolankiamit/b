<%= simple_form_for(@package_booking , class: "form-horizontal" ) do |f| %>
  <%= f.error_notification %>

<div class="form-inputs">
  <div class="form-group">
    <label for="" class="col-sm-2"> Name:</label>
    <div class="col-sm-10">
      <%= f.input_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="" class="col-sm-2"> Email:</label>
    <div class="col-sm-10">
      <%= f.input_field :email %>
    </div>
  </div>
  <div class="form-group">
    <label for="" class="col-sm-2"> Phone:</label>
    <div class="col-sm-10">
      <%= f.input_field :phone %>
    </div>
  </div>
  <%= f.hidden_field :unit_count, value: @unit_count %>
  <%= f.hidden_field :package_id, value: @package_id %>
  <%= f.hidden_field :guest_count, value: @guest_count %>
</div>
<div class="form-actions">
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.button :submit, value: "Next Step", class: "btn btn-primary" %>
    </div>
  </div>
</div>
<% end %>
