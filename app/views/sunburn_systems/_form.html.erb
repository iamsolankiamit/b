<%= simple_form_for(@sunburn_system) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :booking_id, label: "Booking Id" %>
    <%= f.input :booking_date ,as: :string, label: "Booking Date" %>
    <%= f.input :name , label: "Full Name" %>
    <%= f.input :rate , label: "Nightly Rate" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value: "Create Booking" %>
  </div>
<% end %>
