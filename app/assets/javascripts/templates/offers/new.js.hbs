<form class="form-horizontal">
	<fieldset>

		<div class="form-group">
			<div class="col-sm-4">
				<label for="email" class="control-label">Email:</label>
			</div>
			<div class="col-sm-8">
				{{ input type="email" class="form-control" value=fields.email }}
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-4">
				<label for="contact_phone" class="control-label">Phone:</label>
			</div>
			<div class="col-sm-8">
				{{ input type="phone" class="form-control" value=fields.contact_phone }}
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-4">
				<label for="conatct_phone_backup" class="control-label">Alternate Phone:</label>
			</div>
			<div class="col-sm-8">
				{{ input type="phone" class="form-control" value=fields.contact_phone_backup }}
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-4">
				<label for="object_type" class="control-label">Property Type:</label>
			</div>
			<div class="col-sm-8">
				{{ input type="text" class="form-control" value=fields.object_type }}
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-4">
				<label for="size" class="control-label">Size:</label>
			</div>
			<div class="col-sm-8">
				{{ input type="text" class="form-control" value=fields.size }}
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-4">
				<label for="size_type" class="control-label">Size in:</label>
			</div>
			<div class="col-sm-8">
				{{ input type="text" class="form-control" value=fields.size_type }}
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-4">
				<label for="bathroom_count" class="control-label">Bathrooms:</label>
			</div>
			<div class="col-sm-8">
				{{ input type="text" class="form-control" value=fields.bathroom_count }}
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-4">
				<label for="max_guest_count" class="control-label">Accommodates:</label>
			</div>
			<div class="col-sm-8">
				{{ input type="text" class="form-control" value=fields.max_guest_count }}
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-4">
				<label for="bed_count" class="control-label">Beds:</label>
			</div>
			<div class="col-sm-8">
				{{ input type="text" class="form-control" value=fields.bed_count }}
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-4">
				<label for="bedroom_count" class="control-label">Bedrooms:</label>
			</div>
			<div class="col-sm-8">
				{{ input type="text" class="form-control" value=fields.bedroom_count }}
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-4">
				<label for="bed_type" class="control-label">Bed Type:</label>
			</div>
			<div class="col-sm-8">
				{{ input type="text" class="form-control" value=fields.bed_type }}
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-4">
				<label for="street_no" class="control-label">Room no/ bldg no:</label>
			</div>
			<div class="col-sm-8">
				{{ input type="text" class="form-control" value=fields.street_no }}
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-4">
				<label for="street" class="control-label">Address Line 1:</label>
			</div>
			<div class="col-sm-8">
				{{ input type="text" class="form-control" value=fields.street }}
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-4">
				<label for="address_addon" class="control-label">Address Line 2:</label>
			</div>
			<div class="col-sm-8">
				{{ input type="text" class="form-control" value=fields.address_addon }}
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-4">
				<label for="city" class="control-label">City:</label>
			</div>
			<div class="col-sm-8">
				{{ input type="text" class="form-control" value=fields.city }}
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-4">
				<label for="zip" class="control-label">Zip Code:</label>
			</div>
			<div class="col-sm-8">
				{{ input type="text" class="form-control" value=fields.zip }}
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-4">
				<label for="country_code_iso" class="control-label">County Code:</label>
			</div>
			<div class="col-sm-8">
				{{ input type="text" class="form-control" value=fields.country_code_iso }}
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-4">
				<label for="nightly_rate_amount" class="control-label">Nightly rate:</label>
			</div>
			<div class="col-sm-8">
				{{ input type="text" class="form-control" value=fields.nightly_rate_amount }}
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-4">
				<label for="extra_guest_charge_amount" class="control-label">Extra Guest rate:</label>
			</div>
			<div class="col-sm-8">
				{{ input type="text" class="form-control" value=fields.extra_guest_charge_amount }}
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-4">
				<label for="included_guest_count" class="control-label">Included Guests:</label>
			</div>
			<div class="col-sm-8">
				{{ input type="text" class="form-control" value=fields.included_guest_count }}
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-4">
				<label for="service_charge_amount" class="control-label">Cleaning Fee:</label>
			</div>
			<div class="col-sm-8">
				{{ input type="text" class="form-control" value=fields.service_charge_amount }}
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-4">
				<label for="min_nights" class="control-label">Minimum Stay:</label>
			</div>
			<div class="col-sm-8">
				{{ input type="text" class="form-control" value=fields.min_nights }}
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-4">
				<label for="max_nights" class="control-label">Maximum Stay:</label>
			</div>
			<div class="col-sm-8">
				{{ input type="text" class="form-control" value=fields.max_nights }}
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-4">
				<label for="checkin_after" class="control-label">Checkin Time:</label>
			</div>
			<div class="col-sm-8">
				{{ input type="text" class="form-control" value=fields.checkin_after }}
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-4">
				<label for="checkout_before" class="control-label">Checkout Time:</label>
			</div>
			<div class="col-sm-8">
				{{ input type="text" class="form-control" value=fields.checkout_before }}
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-offset-4 col-sm-8">
		<button {{action "createOffer" fields}} class="btn btn-primary btn-block">Submit</button>
			</div>
		</div>
		
	</fieldset>
</form>