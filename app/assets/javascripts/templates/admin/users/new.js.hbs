<form class="form-horizontal">
	<fieldset>
		<div class="form-group">
			<div class="col-sm-4">
				<label for="firstname" class="control-label">First Name:</label>
			</div>
			<div class="col-sm-8">
			{{input type="text" class="form-control" value=fields.firstname}}
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-4">
				<label for="lastname" class="control-label">Last Name:</label>
			</div>
			<div class="col-sm-8">
			{{input type="text" class="form-control" value=fields.lastname}}
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-4">
				<label for="email" class="control-label">Email:</label>
			</div>
			<div class="col-sm-8">
			{{input type="text" class="form-control" value=fields.email}}
			</div>
		</div>
<button {{action "createUser" fields}}>Submit</button>
	</fieldset>
</form>