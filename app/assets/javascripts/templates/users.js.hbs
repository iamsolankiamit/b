<div class="container">
<div class="row">
<div class="col-sm-3">
<ul>
{{#link-to 'users.new'}}Create New User {{/link-to}}
{{#each user in controller}}
<li>{{#link-to 'user' user}}{{user.firstname}} {{user.lastname}}{{/link-to}}</li>
{{/each}}
</ul>
</div>
<div class="col-sm-9">
{{#if controllers.currentUser.isSignedIn}}
  Hi, {{controllers.currentUser.firstname}}
  Hi, {{controllers.currentUser.id}}
{{else}}
  Hi, Guest
{{/if}}
{{outlet}}
</div>
</div>
</div>